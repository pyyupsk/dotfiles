# Configuration for Ghostty application

# General settings
title = "Ghostty"
theme = catppuccin-mocha

# Window settings
window-padding-x = 25
window-padding-y = 25

# Font settings
font-family = JetBrainsMono Nerd Font
font-size = 11.0

# Keybindings
keybind = ctrl+shift+a=select_all
keybind = ctrl+w=close_surface

# Scrolling keybindings
keybind = ctrl+shift+home=scroll_to_top
keybind = ctrl+shift+end=scroll_to_bottom
keybind = ctrl+shift+page_up=scroll_page_up
keybind = ctrl+shift+page_down=scroll_page_down

# Split management keybindings
keybind = ctrl+shift+s=new_split:right
keybind = ctrl+alt+s=new_split:down

# Navigation between splits
keybind = ctrl+left=goto_split:left
keybind = ctrl+down=goto_split:bottom
keybind = ctrl+up=goto_split:top
keybind = ctrl+right=goto_split:right
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

# Resize splits
keybind = ctrl+shift+left=resize_split:left,10
keybind = ctrl+shift+right=resize_split:right,10
keybind = ctrl+shift+up=resize_split:up,10
keybind = ctrl+shift+down=resize_split:down,10

# Toggle zoom on current split
keybind = ctrl+z=toggle_split_zoom

# Ignore keybinding
keybind = ctrl+shift+q=ignore